{
    "name": "mark-villudo/laravel-permission",
    "description": "Permission handling for Laravel 5.4 and up",
    "keywords": [
        "spatie",
        "laravel",
        "permission",
        "acl",
        "security"
    ],
    "homepage": "https://github.com/MarkVilludo/laravel-permissions",
    "license": "MIT",
    "authors": [
        {
            "name": "Mark Villudo",
            "email": "markanthony.villudo@gmail.com",
            "role": "Back end developer"
        }
    ],
    "require": {
        "php" : ">=7.0",
        "illuminate/auth": "~5.3.0|~5.4.0|~5.5.0|~5.6.0",
        "illuminate/container": "~5.3.0|~5.4.0|~5.5.0|~5.6.0",
        "illuminate/contracts": "~5.3.0|~5.4.0|~5.5.0|~5.6.0",
        "illuminate/database": "~5.4.0|~5.5.0|~5.6.0"    },
    "require-dev": {
        "orchestra/testbench": "~3.3.0|~3.4.2|^3.5.0",
        "phpunit/phpunit" : "^5.7|6.2|^7.0"
    },
    "autoload": {
        "psr-4": {  
            "MarkVilludo\\Permission\\": "src",
            "MarkVilludo\\Permission\\": "views"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MarkVilludo\\Permission\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "MarkVilludo\\Permission\\PermissionServiceProvider",
                "Collective\\Html\\HtmlServiceProvider",
            ],
            "aliases": [
                "Collective\\Html\\FormFacade::class",
                "Collective\\Html\\HtmlFacade::class"
            ]
        }
    }
}
